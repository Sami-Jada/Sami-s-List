# Database (PostgreSQL)
# In Railway, set this in the service Environment tab.
# Example (Supabase or Railway Postgres):
# postgresql://user:password@host:port/database?sslmode=require
DATABASE_URL="postgresql://user:password@db.xxxxx.supabase.co:5432/postgres?sslmode=require"

# Redis
# In Railway, set REDIS_URL from your Redis provider (Railway Redis, Upstash, etc.).
# Example:
# redis://default:password@xxxxx.upstash.io:6379
REDIS_URL="redis://default:password@xxxxx.upstash.io:6379"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-jwt-key-change-this-in-production"
JWT_EXPIRATION="15m"
JWT_REFRESH_EXPIRATION="7d"

# OTP Configuration
OTP_EXPIRY_SECONDS=300

# Server Configuration
# Railway sets PORT automatically; keep this for local dev.
PORT=3000
NODE_ENV=development

# CORS Configuration
# Comma-separated list of allowed origins.
# For Railway production, add your frontend URL, for example:
# https://your-frontend.up.railway.app
CORS_ORIGINS="http://localhost:3000,http://localhost:8081,exp://localhost:8081"

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Application
APP_NAME="Sami's List API"
APP_VERSION="1.0.0"

# Logging
# When deploying to Railway, logs are primarily sent to stdout/stderr.
# Set LOG_TO_FILE=true only if you also want file logs (not recommended on ephemeral filesystems).
LOG_TO_FILE=false

